{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2017", "esnext.asynciterable"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "schemas/*": ["types/schemas/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "**/*.spec.ts"]
}
