{
  "name": "users-typeorm-be",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/faker": "^4.x.x",
    "@types/jest": "^23.x.x",
    "@types/jsonwebtoken": "^7.x.x",
    "@types/lodash": "^4.x.x",
    "@types/morgan": "^1.x.x",
    "@types/ms": "^0.x.x",
    "@types/node": "^8.x.x",
    "axios": "^0.x.x",
    "copyfiles": "^2.0.0",
    "dotenv": "^6.x.x",
    "faker": "^4.x.x",
    "fetch-cookie": "^0.x.x",
    "graphql": "^0.x.x",
    "graphql-code-generator": "^0.x.x",
    "graphql-codegen-typescript-template": "^0.x.x",
    "graphql-request": "^1.x.x",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.x.x",
    "node-fetch": "^2.x.x",
    "nodemon": "^1.x.x",
    "rimraf": "^2.x.x",
    "start-server-and-test": "^1.x.x",
    "ts-jest": "^22.x.x",
    "ts-node": "6.x.x",
    "tslint": "^5.x.x",
    "tslint-config-prettier": "^1.x.x",
    "typescript": "2.x.x"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.x.x",
    "apollo-engine": "^1.x.x",
    "apollo-errors": "^1.x.x",
    "apollo-server": "^0.x.x",
    "argon2": "^0.x.x",
    "cookie-parser": "^1.x.x",
    "env": "^0.0.2",
    "graphql-yoga": "^1.x.x",
    "jsonwebtoken": "^8.x.x",
    "lodash": "^4.x.x",
    "merge-graphql-schemas": "^1.x.x",
    "morgan": "^1.x.0",
    "ms": "^2.x.x",
    "path": "^0.x.x",
    "pg": "^7.x.x",
    "reflect-metadata": "^0.x.x",
    "typeorm": "0.x.x"
  },
  "scripts": {
    "start": "nodemon --exec ts-node src/index.ts",
    "start-test": "NODE_ENV=test nodemon --exec ts-node src/index.ts",
    "schema-types": "gql-gen --schema http://localhost:4000 --template graphql-codegen-typescript-template --out ./src/types/schemas/index.d.ts \"./src/**/*.graphql\"",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "lint": "tslint -p .",
    "lint-fix": "tslint -p . --fix",
    "build": "rimraf ./dist && tsc --noImplicitAny false && copyfiles -u 1 src/**/*.graphql dist",
    "test-cli": "start-server-and-test start http://localhost:4000 test"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "*.spec.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  }
}
